<div class="page auth login">
    <div class="container">
      <div class="brand">
        <a href="/">
          <img src="/images/logo.png" alt="logo">
          <span>GALAXY CAFE</span>
        </a>
      </div>
      <!-- <p class="info-text"><strong>Login</strong> to unlock awesome new features.</p> -->
      <div class="features">
        <div class="feat"><span class="material-icons-outlined">
            local_pizza
          </span>Great Food</div>
        <div class="feat"><span class="material-icons-outlined">
            local_offer
          </span>Great Offers</div>
        <div class="feat"><span class="material-icons">
            settings_backup_restore
          </span>No Reordering</div>
      </div>
  
      <div class="login-card">
        <div class="form">
          <form method="POST" action="/new-password">
  
            <div class="form-header">
              <h2>Welcome!</h2>
              <p>Sign in to continue to Galaxy's</p>
            </div>
            <% if(messages.success) { %>
            <div class="form-success">
              <span><%= messages.success %></span>
            </div>
            <% } %>
            <div class="form-body">
              <div class="input-row">
                <div class="input-box">
                    <input type="hidden" name="userId" value="<%= userId %>"> 
                    <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                  <input type="password" placeholder="Enter New Password" name="password" required>
                </div>
              </div>
            </div>
            <% if(messages.error) { %>
            <div class="form-error">
              <span><%= messages.error %></span>
            </div>
            <% } %>
            <div class="form-footer">
              <div class="btns">
                <button type="submit">Update Password</button>
              </div>
            </div>
  
            <div>
            </div>
          </form>
  
        </div>
      </div>
    </div>
  </div>